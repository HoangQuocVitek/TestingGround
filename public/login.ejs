<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="style.css" />
    <title>VEGA</title>
</head>

<body>
    <div class="right-container">
        <a href="http://192.168.11.201/registrace"><button class="login-button">Registrace</button></a>
    </div>
    <!-- Login form -->
    <div class="center-container">
        <form action="/login" method="POST">
            <label for="username">Username</label>
            <input type="text" id="username" name="username" placeholder="username">
            <div class="form-group">
                <label for="password" class="show-password-label">Heslo:</label>
                <div class="password-input-container">
                    <input type="password" placeholder="password" id="password" name="password" required maxlength="30">
                </div>
                <input type="checkbox" id="showPassword" class="show-password-checkbox" onclick="togglePasswordVisibility('password')">
            </div>
            <div class="button-container">
                <button type="submit" class="btn">Přihlásit se</button>
            </div>
        </form>
    </div>

    <script src="index.js"></script>

<script>    // Get all anchor tags wrapping buttons with the class 'login-button'
    const links = document.querySelectorAll('.right-container a');
  
  // Loop through each link to modify the href attribute
  links.forEach(link => {
    const href = link.getAttribute('href');
    if (href.includes('http://192.168.11.201') && href !== 'http://192.168.11.201') {
      link.setAttribute('href', 'http://localhost' + href.slice(21)); // Replace IP with localhost
    }
  });
  </script>
</body>
</html>